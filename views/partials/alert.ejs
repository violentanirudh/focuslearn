<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Temporary Alert Component</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 dark:bg-gray-900 h-screen flex flex-col items-center justify-center space-y-4">
    <button id="showDarkAlert" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">
        Show Alert
    </button>
    <!-- Dark Mode Alert -->
    <div id="darkAlert" class="fixed top-4 left-1/2 transform -translate-x-1/2 bg-gray-800 border border-gray-700 rounded-md shadow-lg p-4 flex items-center space-x-3 hidden">
        <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
        <p class="text-gray-200">File has been removed successfully.</p>
        <button class="text-gray-400 hover:text-gray-200" onclick="hideAlert('darkAlert')">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>
    </div>

    <script>
        function showAlert(alertId) {
            const alert = document.getElementById(alertId);
            alert.classList.remove('hidden');
            setTimeout(() => {
                hideAlert(alertId);
            }, 3000);
        }

        function hideAlert(alertId) {
            const alert = document.getElementById(alertId);
            alert.classList.add('hidden');
        }

        document.getElementById('showDarkAlert').addEventListener('click', () => showAlert('darkAlert'));
    </script>
</body>
</html>