<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>
<body class="bg-[url('/public/background.png')] bg-cover bg-no-repeat bg-scroll text-white py-10 px-2 max-w-screen-xl mx-auto">
    
    <%- include('partials/navigation') %>

    <!-- Profile Section -->
    <section class="max-w-2xl mx-auto mt-10">
        <div class="bg-gray-800/40 rounded-lg p-8">
            <h2 class="text-2xl text-gray-200 font-semibold mb-6">Profile</h2>
            
            <div class="mb-4">
                <label class="block text-gray-300 mb-2">Full Name</label>
                <p id="full-name" class="w-full p-2 rounded bg-gray-700 text-white"><%= user.fullName %></p>
            </div>
            
            <div class="mb-4">
                <label class="block text-gray-300 mb-2">Email</label>
                <p id="email" class="w-full p-2 rounded bg-gray-700 text-white"><%= user.email %></p>
            </div>
            
            <div class="mb-4 space-y-2">
                <label class="block text-gray-300 mb-2">Courses</label>
                <% for (const course of user.courses) { %>
                    <p id="courses" class="w-full p-2 rounded bg-gray-700 text-white"><%= course.title %></p>
                <% } %>
            </div>
            
            <p class="text-sm text-gray-300">You can't change your Profile Details, as it's associated with Cerification.</p>
        </div>
    </section>

    <script>
        feather.replace();
    </script>
</body>
</html>
