<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>

    <script src="https://fonts.google.com/specimen/Quicksand"></script>
    <script src="https://hostingarena-co-in.github.io/haicons/haicons/icons.css"></script>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css" rel="stylesheet">
    <!-- Font Awesome CDN for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<style>
    @import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300..700&display=swap');

    * {
        font-family: 'Space Grotesk';
    }
</style>
<body class="bg-gray-100">

    <!-- Navbar -->
    <nav class="bg-white shadow p-4">
        <div class="container mx-auto flex items-center justify-between">
            <div class="text-gray-800 font-bold text-xl">FocusLearn</div>
            <div class="hidden md:flex space-x-4">
                <a href="/views/course.ejs" class="text-gray-600 hover:text-gray-800">My Courses</a>
                <a href="Portfolio.ejs" class="text-gray-600 hover:text-gray-800">Profile</a>
                <a href="/views/myAccount.ejs" class="text-gray-600 hover:text-gray-800">My Account</a>
                <a href="/views/signOut.ejs" class="text-gray-600 hover:text-gray-800">Log Out</a>
            </div>
            <div class="md:hidden">
                <button class="text-gray-800 focus:outline-none" onclick="toggleMenu()">â˜°</button>
            </div>
        </div>
        <div class="md:hidden" id="mobile-menu" style="display: none;">
            <a href="/views/course.ejs" class="flex items-center block text-gray-600 hover:bg-indigo-300 hover:text-gray-800 px-4 py-2 rounded-lg transition duration-300">
                <i class="fas fa-book mr-3"></i> My courses
              </a>
            <a href="#" class="flex items-center block text-gray-600 hover:bg-blue-300 hover:text-gray-800 px-4 py-2 rounded-lg transition duration-300">
                <i class="fa-solid fa-briefcase mr-3"></i>  Portfolio
            </a>
            <a href="/views/myAccount.ejs" class="flex items-center block text-gray-600 hover:bg-green-400 hover:text-gray-800 px-4 py-2 rounded-lg transition duration-300">
                <i class="fas fa-user mr-3"></i> My Account
            </a>
            <a href="/views/signOut.ejs" class="flex items-center block text-gray-600 hover:bg-red-400 hover:text-gray-800 px-4 py-2 rounded-lg transition duration-300">
                <i class="fas fa-sign-out-alt mr-3"></i> Logout
            </a>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mx-auto p-9">

        <main class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            
            <!-- Left Column (Continue Learning & Recommended Courses) -->
            <div class="col-span-2">
                <!-- Continue Learning Section -->
                <h2 class="text-xl font-semibold mb-4 text-blue-600">Continue Learning</h2>
                <div class="bg-white shadow p-4 rounded-lg mb-6 border-2 border-gray-600">
                    <h3 class="font-semibold mb-2 text-gray-800">Course Card</h3>
                    <p class="text-sm text-gray-600 mb-2">Details related to course</p>
                    
                </div>

                <!-- Recommended Courses Section -->
                <h2 class="text-xl font-semibold mb-4 text-blue-600">Recommended Courses</h2>
                <div class="space-y-4">
                    <div class="bg-white shadow p-4 rounded-lg border-2 border-gray-600">
                        <h3 class="font-semibold mb-2 text-gray-800">Course Card</h3>
                        <p class="text-sm text-gray-600">Details related to course</p>
                    </div>
                    <div class="bg-white shadow p-4 rounded-lg border-2 border-gray-600">
                        <h3 class="font-semibold mb-2 text-gray-800">Course Card</h3>
                        <p class="text-sm text-gray-600">Details related to course</p>
                    </div>
                    <div class="bg-white shadow p-4 rounded-lg border-2 border-gray-600">
                        <h3 class="font-semibold mb-2 text-gray-800">Course Card</h3>
                        <p class="text-sm text-gray-600">Details related to course</p>
                    </div>
                    
                    
                </div>
            </div>

            <!-- Right Column (Stats & Graphs) -->
            <div>
                <!-- Stats Section -->
                <div class="bg-white shadow p-4 rounded-lg w-full mb-6 flex items-center justify-between border-2 border-gray-600">
                    <div class="text-center ">
                        <p class="text-2xl font-bold text-gray-800">No of</p>
                        <p class="text-sm text-gray-600">Days</p>
                    </div>
                </div>

                <!-- Graph Section -->
                <div class="bg-white shadow w-full p-6 rounded-lg mb-6 border-2 border-gray-600">
                    <p class="font-semibold mb-2 text-gray-800">Graph</p>
                </div>

                <!-- Badges Section -->
                <div class="bg-white shadow w-full p-6 rounded-lg border-2 border-gray-600">
                    <p class="font-semibold mb-2 text-gray-800">Badges</p>
                    <div class="flex space-x-2">
                       
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        function toggleMenu() {
            var menu = document.getElementById("mobile-menu");
            if (menu.style.display === "none") {
                menu.style.display = "block";
            } else {
                menu.style.display = "none";
            }
        }
    </script>

</body>
</html>
