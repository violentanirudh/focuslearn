<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head') %>
<body class="bg-slate-100 flex justify-between">

    <%- include('./partials/sidebar') %>

    <div id="main" class="bg-gray-100 text-gray-800 p-6 font-sans max-w-4xl mx-auto space-y-8">

      <div class="">
        <div class="flex items-center mb-2">
          <div class="w-3 h-3 bg-green-500 rounded-full mr-2"></div>
          <h2 class="font-semibold text-gray-800">Dashboard</h2>
          <span class="ml-auto text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded font-medium">Production</span>
        </div>
        <p class="text-sm text-gray-600">Summary of FocusLearn</p>
      </div>
      
      <div class="grid grid-cols-4 gap-4">
        <div class="bg-white p-4 rounded-lg shadow">
          <h3 class="text-sm font-medium text-gray-500 mb-2">Active Users</h3>
          <p class="text-3xl font-bold">405</p>
        </div>
        <div class="bg-white p-4 rounded-lg shadow">
          <h3 class="text-sm font-medium text-gray-500 mb-2">Active Courses</h3>
          <p class="text-3xl font-bold">2024</span></p>
        </div>
        <div class="bg-white p-4 rounded-lg shadow">
          <h3 class="text-sm font-medium text-gray-500 mb-2">Revenue</h3>
          <p class="text-3xl font-bold">RS.90000</p>
        </div>
        <div class="bg-white p-4 rounded-lg shadow">
          <h3 class="text-sm font-medium text-gray-500 mb-2">Success rate</h3>
          <p class="text-3xl font-bold">98.5%</p>
        </div>
      </div>
             
      <div class="bg-white shadow-md rounded-lg w-full overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-xl font-semibold text-gray-800">Course Requests</h2>
          </div>
          <div class="p-6">
            <table class="w-full">
              <thead>
                <tr>
                  <th class="text-left font-medium text-gray-500 pb-3">Course</th>
                  <th class="text-left font-medium text-gray-500 pb-3">Status</th>
                  <th class="text-right font-medium text-gray-500 pb-3">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% for (const element of requests) { %>
                  <tr class="">
                    <td class="py-4">
                      <p class="font-medium text-gray-800"><%= element.playlistId %></p>
                      <p class="text-sm text-gray-500">By <%= element.requestedBy.fullName %></p>
                    </td>
                    <td class="py-4">
                        <% if (element.status === 'pending') { %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                          Pending
                        </span>
                        <% } else if (element.status === 'approved') { %>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                          Approved
                        </span>
                        <% } %>
                    </td>
                    <td class="py-4 text-right">
                      <button class="p-2 rounded bg-blue-600 text-white hover:bg-blue-700 transition-colors duration-200 mr-2" onclick="window.location = `/admin/request/<%= element._id %>`">
                        <i data-feather="eye" class="w-4 h-4"></i>
                      </button>
                      <button class="p-2 rounded bg-green-600 text-white hover:bg-green-700 transition-colors duration-200 mr-2">
                        <i data-feather="check" class="w-4 h-4"></i>
                      </button>
                      <button class="p-2 rounded bg-red-600 text-white hover:bg-red-700 transition-colors duration-200">
                        <i data-feather="trash" class="w-4 h-4"></i>
                      </button>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
      </div>

      <div class="w-full flex justify-between gap-6">
        <div class="bg-white shadow-md rounded-lg overflow-hidden w-3/5">
          <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-xl font-semibold text-gray-800">Recent Activities</h2>
          </div>
          <div class="p-6">
            <ul class="space-y-4">
              <% for (const element of users) { %>
                <li class="flex items-center">
                  <div class="w-3 h-3 bg-green-500 rounded-full mr-2"></div>
                    <p class="text-sm text-gray-600 truncate">
                      <%= element.email %> has joined FocusLearn
                    </p>
                </li>
              <% } %>
            </ul>
          </div>
      </div>

    </div>
 
  <script>
    feather.replace();
  </script>

</body>
</html>