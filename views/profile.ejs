    <script>
        // Get the file input, profile picture, and buttons
        const fileInput = document.getElementById('file-input');
        const changePictureBtn = document.getElementById('change-picture-btn');
        const deletePictureBtn = document.getElementById('delete-picture-btn');
        const profilePicture = document.getElementById('profile-picture');
        const saveBtn = document.getElementById('save-btn');
        const firstName = document.getElementById('first-name');
        const lastName = document.getElementById('last-name');
        const locationInput = document.getElementById('location');

        // Placeholder image in case the user deletes the picture
        const placeholderImage = "https://via.placeholder.com/100";

        // When the 'Change picture' button is clicked, trigger the file input click event
        changePictureBtn.addEventListener('click', function() {
            fileInput.click();
        });

        // When a file is selected, update the profile picture
        fileInput.addEventListener('change', function() {
            const file = fileInput.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    profilePicture.src = e.target.result;  // Update profile picture
                }
                reader.readAsDataURL(file);  // Read the image file as a data URL
            }
        });

        // When the 'Delete picture' button is clicked, set the profile picture to the placeholder
        deletePictureBtn.addEventListener('click', function() {
            profilePicture.src = placeholderImage;  // Reset profile picture to placeholder
        });

        // Handle the 'Save' button click with validation
        saveBtn.addEventListener('click', function() {
            const firstNameValue = firstName.value.trim();
            const lastNameValue = lastName.value.trim();
            const locationValue = locationInput.value.trim();

            // Check if any of the fields are empty
            if (!firstNameValue || !lastNameValue || !locationValue) {
                alert("Please fill out all fields before saving.");
            } else {
                alert("Profile changes saved!");
            }
        });
    </script>
